<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyMovies" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/myMoviesBlue</item>
        <item name="colorPrimaryVariant">@color/myMoviesDarkBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/myMoviesBlue</item>
        <item name="colorSecondaryVariant">@color/myMoviesExtraDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyMovies.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Reverse" parent="Theme.MyMovies.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/myMoviesDarkBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/myMoviesMidnight</item>
    </style>

    <style name="Theme.MyMovies.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyMovies.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Splash" parent="Theme.AppCompat.DayNight.NoActionBar"/>
</resources>